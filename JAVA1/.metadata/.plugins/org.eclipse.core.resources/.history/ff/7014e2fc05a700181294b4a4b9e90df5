package unidade2;

import java.util.Scanner;

public class Fatorial {

	public static void main(String[] args) {
		
		int num = 0;
		int count = 1;
		int f = 1;
		Scanner input = new Scanner(System.in);
		
		System.out.print("Informe um valor: ");
		num = input.nextInt();		
		
		System.out.printf("%d! = ", num);		
		
		while(count <= num) {
			f *= count;
			
			count++;
		}
		
		System.out.print(f);
		
		input.close();

	}

}
